# =================================
# ENVIRONMENT CONFIGURATION
# =================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ---------------------------------
# Application
# ---------------------------------
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://your-domain.com

# ---------------------------------
# Database
# ---------------------------------
# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/devplatform
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme_strong_password_here
MONGO_DB=devplatform
MONGO_PORT=27017

# ---------------------------------
# Redis Cache
# ---------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=changeme_redis_password
REDIS_PORT=6379

# ---------------------------------
# JWT Authentication
# ---------------------------------
# Generate strong secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_refresh_secret_here_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ---------------------------------
# Email Service (SMTP)
# ---------------------------------
# Gmail example:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM="Developer Platform <noreply@your-domain.com>"
SMTP_SECURE=true

# SendGrid example (alternative):
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# ---------------------------------
# AWS S3 File Storage (Optional)
# ---------------------------------
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1

# ---------------------------------
# Frontend Build Variables
# ---------------------------------
VITE_API_URL=https://api.your-domain.com
VITE_SOCKET_URL=https://api.your-domain.com

# ---------------------------------
# Rate Limiting
# ---------------------------------
RATE_LIMIT_WINDOW=15  # minutes
RATE_LIMIT_MAX=100    # requests per window

# ---------------------------------
# Monitoring & Error Tracking
# ---------------------------------
# Sentry (Error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ---------------------------------
# Docker Ports (docker-compose)
# ---------------------------------
BACKEND_PORT=5000
FRONTEND_PORT=3000

# ---------------------------------
# Session & Security
# ---------------------------------
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=https://your-domain.com

# ---------------------------------
# Third-Party Integrations
# ---------------------------------
# OpenAI (AI Assistant)
OPENAI_API_KEY=your_openai_api_key

# Firebase (Push notifications - optional)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# ---------------------------------
# Development Only
# ---------------------------------
# LOG_LEVEL=debug
# ENABLE_DETAILED_ERRORS=true
